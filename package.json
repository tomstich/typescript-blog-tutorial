{
  "name": "typescript-first-steps",
  "version": "1.0.0",
  "author": "Tom Stich <tom.stich@jimdo.com>",
  "license": "MIT",
  "scripts": {
    "lint": "tslint src/**/*.ts",
    "watch": "tsc -p . -w",
    "test": "yarn lint && jest --coverage",
    "build": "tsc -p .",
    "precommit": "yarn test",
    "prepush": "yarn test && yarn build"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "devDependencies": {
    "@types/jest": "^19.2.2",
    "husky": "^0.13.3",
    "jest": "^20.0.4",
    "ts-jest": "^20.0.6",
    "tslint": "^5.1.0",
    "typescript": "^2.5.1"
  }
}
